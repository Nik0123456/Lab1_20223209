<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil y Estadísticas"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="32dp"
                android:textColor="@color/title_color" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/antenna_logo"
                android:layout_marginBottom="24dp"
                android:contentDescription="Logo perfil" />

            <!-- Card de información del usuario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/textViewNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario: Nombre"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

            <!-- Card de estadísticas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estadísticas de Juego"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/title_color" />

                <TextView
                    android:id="@+id/textViewPartidasJugadas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partidas jugadas: 0"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:drawableStart="@drawable/ic_play"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/textViewPartidasGanadas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partidas ganadas: 0"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:drawableStart="@drawable/ic_trophy"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/textViewPorcentajeExito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Porcentaje de éxito: 0.0%"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:drawableStart="@drawable/ic_percent"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/textViewTiempoPromedio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiempo promedio: 0.0s"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_time"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>